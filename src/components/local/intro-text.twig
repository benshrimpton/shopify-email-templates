<mj-section>
  <mj-column css-class="intro-text">
    {% block topline_outer %}
      <mj-text
        font-size="16px"
        padding-bottom="20px"
        css-class=""
      >
        {% block topline %}
          <span class="poppins-light">
            {{ topline | default('ORDER {{ name }}') }}
          </span>
        {% endblock %}
      </mj-text>
    {% endblock %}

    {% block headline_outer %}
      <mj-text
        font-size="24px"
        line-height="1.4"
        padding-bottom="20px"
        css-class="intro-text__title uppercase"
      >
        {% block headline %}
         <span class="intro-text__message">
         {{ headline | default('Headline') }}
         </span>
        {% endblock %}
      </mj-text>
    {% endblock %}

    {% block text_outer %}
      <mj-text
        font-size="16px"
        line-height="1.7"
      >
        {% block text %}{{ text | default('Lorem ipsum dolor sit amet consectetur adipisicing elit. Officia optio delectus asperiores architecto cupiditate perferendis aperiam magni veritatis, nulla corrupti?') }}{% endblock %}
      </mj-text>
    {% endblock %}
  </mj-column>
</mj-section>