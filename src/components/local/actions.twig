<mj-section css-class="button-wrap">
  <mj-column>
    {% block primary_outer %}
      <mj-button
        href="{% block primary_url %}{{ primary.url | default('{{ shop.url }}') }}{% endblock %}"
        css-class="button"
      >
        {% block primary_text %}
          {{ primary.text | default('Visit our store') }}
        {% endblock %}
      </mj-button>
    {% endblock %}
  </mj-column>
</mj-section>